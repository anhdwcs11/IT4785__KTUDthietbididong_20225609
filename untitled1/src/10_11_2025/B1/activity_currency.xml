<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currency_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CurrencyActivity">

    <!-- Nhãn From -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ (From):"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Hàng From: Spinner + EditText -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@+id/spinnerFrom"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="Chọn tiền tệ nguồn" />

        <EditText
            android:id="@+id/editTextFrom"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            android:hint="Nhập số tiền"
            android:selectAllOnFocus="true"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Nhãn To -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đến (To):"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <!-- Hàng To: Spinner + EditText -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@+id/spinnerTo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="Chọn tiền tệ đích" />

        <EditText
            android:id="@+id/editTextTo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            android:hint="Kết quả"
            android:selectAllOnFocus="true"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
